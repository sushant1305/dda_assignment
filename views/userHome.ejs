<!DOCTYPE html>
<html lang="en">
<head>
    <title>User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <style>
        form {
            text-align: center;
        }
        .table-data {
            text-align: center;

        }
    </style>
</head>
<body>
<a href="/home"><img src="/images/header.png" width="100%"/></a>
<div class="table-data">
        <%
        if(userData.length!=0){
        userData.forEach(function(data){
        %>
        <br><br><br>
        <h4 style="display:inline-block"> Welcome <%=data.FirstName %> <%=data.LastName %></h4>
        <br><br>
        <% }) %>
        <% } else{ %>
        <h4>
            <span >No Data Found</span>
        </h4>
        <% } %>
</div>

<form method="post" action="/create">
    <input type="text"  name="userId" value=<%= userData[0].UserId %> style="display:none">
    <button type="submit" class="btn btn-secondary">Create New Order</button>
</form>
<br>
</form>
<form method="post" action="/view">
    <input type="text"  name="userId" value=<%= userData[0].UserId %> style="display:none">
    <button type="submit" class="btn btn-secondary">View Your Orders</button>
</form>
<br>
<form method="post" action="/viewRates">
    <input type="text"  name="userId" value=<%= userData[0].UserId %> style="display:none">
    <button type="submit" class="btn btn-secondary">View Rate List</button>
</form>
<br>
<form method="post" action="/addRate">
    <input type="text"  name="userId" value=<%= userData[0].UserId %> style="display:none">
    <button type="submit" class="btn btn-secondary">Add New Rate Item</button>
</form>
</body>
</html>