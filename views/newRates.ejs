<!DOCTYPE html>
<html lang="en">
<head>
    <title>Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
<a href="/home"><img src="/images/header.png" width="100%"/></a>
<div class="table-data">
    <h2 style="text-align: center;">Rate Add/Update</h2>
        <%
        if(rates.length!=0){
        rates.forEach(function(data){
        %>
        <form method="post" action="/rate/modify">
            <label class="newlabel">Item Category : </label>
            <label class="newlabel"><%=data['ItemCategory']%></label><br>
            <input type="text" value=<%=data['ItemCategory']%> name="itemCategory" style="display:none">
            <label class="newlabel">SGST Percent : </label>
            <input type="number" value=<%=data['SGST Percent']%> name="sgstPercent"><br>
            <label class="newlabel">CGST Percent : </label>
            <input type="number" value=<%=data['CGST Percent']%> name="cgstPercent"><br>
            <label class="newlabel">Rate / KG / 100KM  : </label>
            <input type="number" value=<%=data['Rate/Kg/100km']%> name="rateKgKm"><br>
            <label class="newlabel">Fragility Charges : </label>
            <input type="text" value=<%=data['FragilityCharges']%> name="fragilityCharges"><br>
            <button type="submit">Modify</button>
        </form>
        <% }) %>
        <% } else{ %>
    <form method="post" action="/rate/new">
        <label class="newlabel">SGST Percent : </label>
        <input type="number" name="sgstPercent"><br>
        <label class="newlabel">CGST Percent : </label>
        <input type="number" name="cgstPercent"><br>
        <label class="newlabel">Rate / KG / 100KM  : </label>
        <input type="number" name="rateKgKm"><br>
        <label class="newlabel">Item Category : </label>
        <input type="text" name="itemCategory"><br>
        <label class="newlabel">Fragility Charges : </label>
        <input type="number" name="fragilityCharges"><br>
        <button type="submit">Add Rate</button>
    </form>
        <% } %>
</div>
</body>
</html>