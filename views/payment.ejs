<!DOCTYPE html>
<html lang="en">
<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<head>
    <!-- <title>User</title> -->
    <style>
        h2 {
            text-align: center;
        }
        button {
		position: relative;
        left:230px;
        top:50px;
		}
        
    </style>
</head>
<body>
<a href="/home"><img src="/images/header.png" width="100%"/></a>
<form method="post" action="/orderComplete">

<h2>Payment</h2>


<div class="bootstrap">
    <form>
        <div class="row mb-3">
          <label for="orderid" class="col-sm-2 col-form-label">Order Id:</label>
          <div class="col-sm-10">
            <input type="textbox" class="form-control" id="inputEmail3" value=<%=details.orderId %>>
          </div>
        </div>
        <div class="row mb-3">
          <label for="total" class="col-sm-2 col-form-label">Total</label>
          <div class="col-sm-10">
            <input type="textbox" class="form-control" id="inputPassword3" value=<%=details.total %>>
          </div>
        </div>
        <fieldset class="row mb-3">
          <legend class="col-form-label col-sm-2 pt-0">Payment Mode</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
              <label class="form-check-label" for="gridRadios1">
                Credit Card
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
              <label class="form-check-label" for="gridRadios2">
                Debit Card
              </label>
            </div>
            <div class="form-check disabled">
              <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
              <label class="form-check-label" for="gridRadios3">
                UPI
              </label>
            </div>
          </div>
        </fieldset>


</div>
<input type="text" name="details" style="display: none;" value=<%= JSON.stringify(details) %>></input>
<button type="submit" name="createOrder" class="btn btn-primary">Make Payment</button>
<!-- <button type="submit" name="cancelorder" class="btn btn-primary">Cancel</button> -->
</form>
</body>
</html>